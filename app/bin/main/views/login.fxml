<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="swe.controllers.LoginController" prefWidth="400" prefHeight="400">
    <VBox spacing="20" alignment="CENTER" layoutX="50" layoutY="20" prefWidth="300">
        <Label text="Login Page" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <Button text="Login" onAction="#handleLogin"/>
    </VBox>
</AnchorPane>
